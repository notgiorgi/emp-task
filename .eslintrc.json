{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": [
        "flowtype"
    ],
    "rules": {
        "flowtype-errors/show-errors": 2,
        "react/prop-types" : 0,
        "react/prefer-stateless-function": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "consistent-return": 0,
        "no-console": 0,
        "space-infix-ops": 2,
        "semi": ["error", "never"]
    }
}